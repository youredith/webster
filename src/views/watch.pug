extends base

block content 
    video(src="/" + video.filePath, controls)
    div
        p=video.description
        small=video.createdAt
        br
        small Uploaded by 
            a(href=`/user/${video.owner._id}`) #{video.owner.username}
        p=video.description
        p=video.hashtags
        p=video.tickers
    if String(video.owner._id) === String(loggedInUser._id)
        a(href=`${video.id}/edit`) Edit Video &rarr;
    